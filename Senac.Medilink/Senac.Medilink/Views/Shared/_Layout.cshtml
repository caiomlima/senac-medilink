<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Medilink</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Senac.Medilink.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header-desktop d-block d-sm-none">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-primary navbar-dark border-bottom box-shadow mb-3 py-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Medilink</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between w-100">
                    <ul class="navbar-nav flex-grow-1 d-flex justify-content-start">
                        <li class="nav-item">
                            <a class="btn btn-light text-dark border border-white" style="min-width:120px" asp-area="" asp-controller="PatientSchedule" asp-action="Index">Agendamentos</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light text-dark border border-white" style="min-width:120px" asp-area="" asp-controller="PatientOnlineAppointment" asp-action="Index">Agendar Consulta Online</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light text-dark border border-white" style="min-width:120px" asp-area="" asp-controller="PatientPresentialAppointment" asp-action="index">Agendar Consulta Presencial</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-light text-dark border border-white" style="min-width:120px" asp-area="" asp-controller="PatientExam" asp-action="index">Agendar Exame</a>
                        </li>
                    </ul>
                    <form class="nav-item" id="logoutForm" asp-controller="Auth" asp-action="Logout" method="post">
                        <button class="btn btn-primary text-white nav-link" style="min-width:120px" type="submit">Logout</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <aside class="aside-desktop">
        <div>
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/MediLink 5.png" alt="Logo do Projeto">
                Medilink
            </a>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="PatientSchedule" asp-action="Index">Agendamentos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="PatientOnlineAppointment" asp-action="Index">Agendar Consulta Online</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="PatientPresentialAppointment" asp-action="index">Agendar Consulta Presencial</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="PatientExam" asp-action="index">Agendar Exame</a>
                </li>
            </ul>
        </div>
        <form id="logoutForm" asp-controller="Auth" asp-action="Logout" method="post">
            <button type="submit">Logout</button>
        </form>
    </aside>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
